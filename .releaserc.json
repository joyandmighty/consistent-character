{
    "branches": ["main"],
    "plugins": [
        ["@semantic-release/commit-analyzer", {
            "preset": "conventionalcommits",
            "releaseRules": [
                { "type": "chore", "release": "patch" },
                { "type": "refactor", "release": "patch" },
                { "type": "style", "release": "patch" }
            ]
        }],
        ["@semantic-release/release-notes-generator", {
            "preset": "conventionalcommits",
            "presetConfig": {
                "types": [
                    {
                        "type": "feat",
                        "section": "ðŸš€ Features",
                        "hidden": false
                    },
                    {
                        "type": "fix",
                        "section": "ðŸ› Bug Fixes",
                        "hidden": false
                    },
                    {
                        "type": "chore",
                        "section": "ðŸ”§ Maintenance",
                        "hidden": false
                    },
                    {
                        "type": "docs",
                        "section": "ðŸ“š Documentation",
                        "hidden": false
                    },
                    { "type": "style", "section": "ðŸ’Ž Style", "hidden": false },
                    {
                        "type": "refactor",
                        "section": "â™»ï¸ Refactor",
                        "hidden": false
                    },
                    {
                        "type": "perf",
                        "section": "âš¡ Performance",
                        "hidden": false
                    },
                    { "type": "test", "section": "ðŸ§ª Tests", "hidden": false }
                ]
            },
            "writerOpts": {
                "headerPartial": "# ðŸ”– {{version}} ({{date}})\n\n## Docker Image\n\n```bash\n# Latest version\ndocker pull ghcr.io/imamik/consistent-character:{{version}}\n\n# Or use latest tag\ndocker pull ghcr.io/imamik/consistent-character:latest\n```\n\n## Changes\n"
            }
        }],
        "@semantic-release/changelog",
        ["@semantic-release/exec", {
            "prepareCmd": "echo ${nextRelease.version} > VERSION"
        }],
        ["@semantic-release/github", {
            "assets": ["VERSION"]
        }],
        ["@semantic-release/git", {
            "assets": ["CHANGELOG.md", "VERSION"],
            "message": "chore(release): ðŸ”– ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }]
    ]
}
